#!/bin/sh

log() {
    echo "mender:$*" >&2
}

log "$(cat /etc/mender/artifact_info): $(basename "$0") was called!"

RC=0
UPD=`dbus-send --system \
	--dest=org.mender.updater \
	--print-reply \
	--type=method_call \
	/ \
	local.ServiceQtUpdater.CMenderQtUpdater.enableReboot | \
	grep "byte" | \
	awk '{print $2}'`

RC=$UPD

log "Returning $RC from $0 state script"
exit $RC
